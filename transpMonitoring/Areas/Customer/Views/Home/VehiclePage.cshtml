@model Vehicle
@{
    ViewData["Title"] = "Транспорт";
}<div class="d-flex  justify-content-center">
    <h2 class="text-primary ">Транспортное средство</h2>
    <hr />
</div>
<form method="get">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-between">
        <div class="border d-flex flex w-100">
            <div class="container">
                <div class="p-2 pb-1">
                    <label asp-for="Brand" class="p-0"></label>
                    <label class="form-control">@Model.Brand</label>
                </div>
                <div class="p-2 pb-1">
                    <label asp-for="Model" class="p-0"></label>
                    <label class="form-control">@Model.Model</label>
                </div>
                <div class="p-2 pb-1">
                    <label asp-for="StateRegisterNumber" class="p-0"></label>
                    <label class="form-control">@Model.StateRegisterNumber</label>
                </div>
                    @foreach (var description in Model.Descriptions)
                    {
                        <div class="p-2 pb-1">
                            <label class="p0" for="description">@description.Name :</label>
                            <label class="form-control" id="descriprion">@description.Content</label>
                        </div>
                    }
                <div class="d-flex flex-lg-row justify-content-end">
                    <div class="p-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                            Назад
                        </a>
                    </div>
                </div>
            </div>
            @if (Model.Driver != null)
            {
                <div class="container m-3 p-2 border">
                    <h4>Информация о водителе</h4>
                    <div class="p-2">
                        <label asp-for="Driver.FirstName" class="p-0"></label>
                        <label class="form-control">@Model.Driver.FirstName</label>
                    </div>
                    <div class="p-2">
                        <label asp-for="Driver.LastName" class="p-0"></label>
                        <label class="form-control">@Model.Driver.LastName</label>
                    </div>
                    <div class="p-2">
                        <label asp-for="Driver.MiddleName" class="p-0"></label>
                        <label class="form-control">@Model.Driver.MiddleName</label>
                    </div>
                    <div class="p-2">
                        <label asp-for="Driver.Information" class="p-0"></label>
                        <label class="form-control">@Model.Driver.Information</label>
                    </div>
                </div>
            }
            

        </div>
    </div>

</form>