@using VehicleMonitoring.mvc.ViewModels;
@model RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Register" asp-controller="Account">
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Login" type="text" class="form-control" placeholder="Введите логин" value="@Model?.Login" />
                <label asp-for="Login" class="form-label" >Login</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Login"></span>
    </div> 
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Введите Имя" value="@Model?.FirstName" />
                <label asp-for="FirstName" class="form-label">Имя</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div><div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="LastName" type="text" class="form-control" placeholder="Введите Фамилию" value="@Model?.LastName" />
                <label asp-for="LastName" class="form-label">Фамилия</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" value="@Model?.Password" />
                <label asp-for="Password" class="form-label">Пароль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Password">Пароль</span>
    </div>
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
            </span>
            <div class="form-floating">
                <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Введите пароль" value="@Model?.RepeatPassword" />
                <label asp-for="RepeatPassword" class="form-label">Пароль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="RepeatPassword">Повторите пароль</span>
    </div>
    <div class="text-danger mb-2">@TempData["error"]</div>
    <button type="submit" class="btn btn-primary w-100">Создать аккаунт</button>
</form>
