@using VehicleMonitoring.mvc.ViewModels;
@model AccountVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
    var isVisibleRegisterTab = Model?.RegisterViewModel != null;
}

<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Авторизация - transpMonitoring</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://kit.fontawesome.com/46354009ec.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center flex-column bg-primary" style="min-height:100vh" data-bs-theme="white">
        <main role="main" style="width:400px" class="mt-5">
            <div class="card">
                <div class="card-header d-flex justify-content-center">
                    <span class="fw-bold" style="font-size:25px ">
                        <i class="fa-solid fa-clipboard-list"></i>Мониторинг транспорта
