                    <h3 class="text-center ">Вход </h3>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="pills-login" role="tabpanel">
                            @{
                                ViewData.TemplateInfo.HtmlFieldPrefix = "l";
                                await Html.RenderPartialAsync("_Login", Model?.LoginViewModel);
                            }
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer text-end text-light  mt-3">
                Почта для связи <a href="vild.mustafin2017@yandex.ru">vild.mustafin2017@yandex.ru</email>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </main>
    </div>
</body>

</html>
<footer class=" fixed-bottom border-bottom " data-bs-theme="dark">
