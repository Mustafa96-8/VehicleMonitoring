@model List<Message>
@{

    ViewData["Title"] = "Описания транспорта";
}
<div class="container">
    <div class="container d-flex justify-content-end">
        <a asp-controller="Message" asp-action="Upsert" type="button" class="btn btn-outline-primary btn">
            <i class="bi bi-plus-circle"></i> Добавить сообщение
        </a>
    </div>
    <table class="table table-light table-striped table-hover m-3 ">

        <thead class="tab-content">
            <tr>
                <th>
                    Id сообщения
                </th>
                <th>
                    Степень критичности
                </th>
                <th>
                    Id отчёта
                </th>
                <th>
                    Содержание
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td class="tab-content ">
                        @obj.Id
                    </td>
                    <td class="tab-content">
                        @obj.Grade
                    </td>
                    <td class="tab-content">
                        @obj.ReportId
                    </td>
                    <td class="tab-content text-truncate " style="max-width: 300px;">
                        @obj.Content
                    </td>
                    
                    <td class="tab-content ">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Message" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-1 rounded-2">
                                <i class="bi bi-pencil-square"></i> Изменить
                            </a>
                            <a asp-controller="Message" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1 rounded-2">
                                <i class="bi bi-trash3"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
