@model Driver
@{
    ViewData["Title"] = "Водитель";
}<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Удалить водителя</h2>
    <hr />
</div>
<form method="post" >
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-1">
                <label asp-for="FirstName" class="p-0"></label>:<p>@Model.FirstName</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="LastName" class="p-0"></label>:<p>@Model.LastName</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="MiddleName" class="p-0"></label>:<p>@Model.MiddleName</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Information" class="p-0"></label>:<p>@Model.Information</p>
            </div>
            <div class=" d-flex flex-lg-row justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="Driver" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        <i class="bi bi-box-arrow-in-left"></i> К списку Водителей
                    </a>
                </div>  
                <div class="p-3">
                    <button type="submit" class="btn btn-outline-danger" style="padding-block-end">
                        <i class="bi bi-trash3"></i> Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}