@model Driver
@{

    ViewData["Title"] = "Водитель";
}<div class="d-flex justify-content-center">
    <h2 class="text-primary ">@(Model.Id != 0 ? "Изменить" : "Создать") информацию о водителе</h2>
    <hr />
</div>
<form method="get">
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-1">
                <label asp-for="FirstName" class="p-0"></label>:<p>@Model.FirstName</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="LastName" class="p-0"></label>:<p>@Model.LastName</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="MiddleName" class="p-0"></label>:<p>@Model.MiddleName</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Information" class="p-0"></label>:<p>@Model.Information</p>
            </div>
            <div class=" d-flex flex-lg-row justify-content-start  ">
            <div class="p-3">
                <a asp-controller="Driver" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                    К списку Водителей
                </a>
            </div>
        </div>
    </div>
</form>
