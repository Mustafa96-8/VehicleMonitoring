@model Report
@{

    ViewData["Title"] = "Отчёт";
}
<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Удалить отчёт</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-1">
                <label asp-for="Id" class="p-0"></label>:<p>@Model.Id</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Vehicle.StateRegisterNumber" class="p-0"></label>:<p>@Model.Vehicle.StateRegisterNumber</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="CreationTime" class="p-0"></label>:<p>@Model.CreationTime</p>
            </div>
            <div class="d-flex flex-column">
                <div class="p-3 pb-0">
                    <label asp-for="Messages" class="p0" for="Message"></label>
                </div>
                @foreach (var message in Model.Messages)
                {
                    <div class="p-4 pb-1">
                        <textarea class="form-control" readonly id="Message" asp-for="@message.Content">
                        </textarea>
                    </div>
                }
            </div>
            <div class=" d-flex justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="Report" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        К списку отчётов
                    </a>
                </div>
                <div class="p-3">
                    <button type="submit" class="btn btn-outline-danger" style="padding-block-end">
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
