@model Report
@{

    ViewData["Title"] = "Отчёт";
}
<form method="get">
    <div class="container border p-3 mt-4">
        <div class="p-3 pb-1">
            <label asp-for="Id" class="p-0"></label>:<p>@Model.Id</p>
        </div>
        <div class="p-3 pb-1">
            <label asp-for="VehicleId" class="p-0"></label>:<p>@Model.VehicleId</p>
        </div>
        <div class="p-3 pb-1">
            <label asp-for="CreationTime" class="p-0"></label>:<p>@Model.CreationTime</p>
        </div>
        <div class="d-flex">
            @foreach (var message in Model.Messages)
            {
                <div class="p-3 pb-1">
                    <textarea class="form-control" readonly id="Message" asp-for="@message">
                    </textarea>
                    <label asp-for="Messages" class="p0" for="Message"></label>
                </div>
            }
        </div>
        <div class="row">
            <div class="w-75 btn-group" role="group">
                <a asp-controller="Report" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-box-arrow-in-left"></i> К списку отчётов
                </a>
                <a asp-controller="Report" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-pencil-square"></i> Изменить
                </a>
                <a asp-controller="Report" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mx-1 rounded-2">
                    <i class="bi bi-trash3"></i> Удалить
                </a>
            </div>
        </div>
    </div>
</form>