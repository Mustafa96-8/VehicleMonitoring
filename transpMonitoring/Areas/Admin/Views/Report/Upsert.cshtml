@model ReportVM
@{

    ViewData["Title"] = "Отчёт";
}<div class="d-flex justify-content-center">
    <h2 class="text-primary ">@(Model.Report.Id != 0 ? "Изменить" : "Создать") информацию об отчёте</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Report.Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            
            <div class="p-3">
                <label asp-for="Report.VehicleId" class="p-0"></label>
                <select asp-for="Report.VehicleId" class="form-select" asp-items="@Model.VehicleList">
                    <option disabled selected>--Выберите транспорт--</option>#
                </select>
                <span asp-validation-for="Report.VehicleId" class="text-danger"></span>
            </div>
            <div class=" d-flex flex-lg-row justify-content-end  ">
                <div class="p-3">
                    @if (@Model.Report.Id != 0)
                    {
                        <button type="submit" class="btn btn-outline-primary">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-outline-primary">Create</button>
                    }
                </div>
                <div class="p-3">
                    <a asp-controller="Report" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        К списку GPS датчиков
                    </a>
                </div>
                @if (@Model.Report.Id != 0)
                {
                    <div class="p-3">
                        <a asp-controller="Report" asp-action="Delete" asp-route-id="@Model.Report.Id" class="btn btn-outline-danger" style="padding-block-end">
                            Удалить
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}