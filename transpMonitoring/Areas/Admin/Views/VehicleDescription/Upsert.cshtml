@model VehicleDescriptionVM
@{
    ViewData["Title"] = "VehicleDescription";
}<div class="row pb-2">
    <h2 class="text-primary">@(Model.VehicleDescription.Id != 0 ? "Изменить" : "Создать") Описание</h2>
    <hr />
</div>
<form method="post" >
    <input asp-for="VehicleDescription.Id" hidden />
    <div class="row">
        <div class=" d-flex align-content-center ">
            <div class="border p-3 mt-4">
                <div class="mb-3 row">
                    <label asp-for="VehicleDescription.Name" class="p-0"></label>
                    <input asp-for="VehicleDescription.Name" class="form-control" />
                    <span asp-validation-for="VehicleDescription.Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="VehicleDescription.Content" class="p-0"></label>
                    <textarea asp-for="VehicleDescription.Content" class="form-control">@Model.VehicleDescription.Content</textarea>
                    <span asp-validation-for="VehicleDescription.Content" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label asp-for="VehicleDescription.VehicleId" class="p-0"></label>
                    <select asp-for="VehicleDescription.VehicleId" class="form-select" asp-items="@Model.vehicleList">
                        <option disabled selected>--Выберете транпорт--</option>#
                    </select>
                    <span asp-validation-for="VehicleDescription.VehicleId" class="text-danger"></span>
                </div>
                @* <div class="mb-3 row">
                <label asp-for="" class="p-0"></label>
                <select asp-for="Product.CategoryId" class="form-select" asp-items="@Model.categoryList">
                <option disabled selected>--Select category--</option>#
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                *@
                <div class="row">
                    <div class="col-6 col-md-3">

                        @if (@Model.VehicleDescription.Id != 0)
                        {
                            <button type="submit" class="btn btn-outline-primary">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-outline-primary">Create</button>
                        }

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="VehicleDescription" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}