@model VehicleDescription
@{

    ViewData["Title"] = "VehicleDescription";
}

<form method="get">
    <div class="container border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Html.DisplayName(Model.Name)</h2>
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Name" class="p-0"></label> : @Html.DisplayName(Model.Name)
            </p>
        </div>
        <div class="mb-3 row">
            <label for="Description "></label>
            <textarea id="Description" asp-for="Content">
            </textarea> : @Html.DisplayName(Model.Content)
        </div>
        <div class="row">
            <div class="w-75 btn-group" role="group">
                <a asp-controller="VehicleDescription" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-box-arrow-in-left"></i> Back to list
                </a>
                <a asp-controller="VehicleDescription" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1 rounded-2">
                <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-controller="VehicleDescription" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mx-1 rounded-2">
                <i class="bi bi-trash3"></i> Delete
                </a>
            </div>
        </div>
    </div>
</form>
