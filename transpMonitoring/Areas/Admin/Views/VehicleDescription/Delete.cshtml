@model VehicleDescription
@{

    ViewData["Title"] = "Описание";
}
<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Удалить описание транспорта</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-1">
                <label asp-for="Id" class="p-0"></label>:<p>@Model.Id</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Vehicle.StateRegisterNumber" class="p-0"></label>:<p>@Model.Vehicle.StateRegisterNumber</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Vehicle.Model" class="p-0"></label>:<p>@Model.Vehicle.Model</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Name" class="p-0"></label>:<p>@Model.Name</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Content" class="p-0"></label>:<p>@Model.Content</p>
            </div>
            <div class=" d-flex flex-lg-row justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="VehicleDescription" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        <i class="bi bi-box-arrow-in-left"></i>  К списку описаний
                    </a>
                </div>
                <div class="p-3">
                    <button type="submit" class="btn btn-outline-danger" style="padding-block-end">
                        <i class="bi bi-trash3"></i> Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
