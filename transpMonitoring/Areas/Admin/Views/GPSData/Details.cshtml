@model GPSData
@{

    ViewData["Title"] = "GPS датчик";
}
<form method="get">
    <div class="container border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Html.DisplayName(Model.Name)</h2>
        </div>
        <div class="mb-2 row">
            <span>
                <label asp-for="Name" class="p-0"></label>: @Html.DisplayName(Model.Name)
            </span>
        </div>
        <div class="mb-2 row">
            <span>
                <label asp-for="VehicleId" class="p-0"></label>: @Html.DisplayName(Model.VehicleId.ToString())
            </span>
        </div>
        <div class="row">
            <div class="w-75 btn-group" role="group">
                <a asp-controller="GPSData" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-box-arrow-in-left"></i> К списку датчиков GPS
                </a>
                <a asp-controller="GPSData" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-pencil-square"></i> Изменить
                </a>
                <a asp-controller="GPSData" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mx-1 rounded-2">
                    <i class="bi bi-trash3"></i> Удалить
                </a>
            </div>
        </div>
    </div>
</form>
