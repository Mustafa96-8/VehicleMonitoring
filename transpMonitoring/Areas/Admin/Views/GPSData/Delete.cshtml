@model GPSData
@{
    ViewData["Title"] = "Датчик GPS";
}<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Удалить датчик GPS</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-1">
                <label asp-for="Name" class="p-0"></label>:<p>@Model.Name</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="VehicleId" class="p-0"></label>:<p>@Model.VehicleId</p>
            </div>
            <div class=" d-flex flex-lg-row justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="GPSData" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        К списку датчиков
                    </a>
                </div>
                <div class="p-3">
                    <button type="submit" class="btn btn-outline-danger" style="padding-block-end">
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}