@model User
@{

    ViewData["Title"] = "Пользователь";
}
<div class="d-flex justify-content-center">
    <h2 class="text-primary ">@(Model.Id != 0 ? "Изменить" : "Создать") Пользователя</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="Salt" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 ">
                <label asp-for="Login" class="p-0"></label>
                <input asp-for="Login" class="form-control" type="text" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="p-3 ">
                <label asp-for="FirstName" class="p-0"></label>
                <input asp-for="FirstName" class="form-control" type="text" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="p-3 ">
                <label asp-for="LastName" class="p-0"></label>
                <input asp-for="LastName" class="form-control" type="text" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="p-3 ">
                <label asp-for="Role" class="p-0"></label>
                <input asp-for="Role" class="form-control" type="text" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="p-3 ">
                <label asp-for="PasswordHash" class="p-0"></label>
                <input asp-for="PasswordHash" class="form-control" type="text"/>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class=" d-flex flex-lg-row justify-content-start  ">
                <div class="p-3">
                    @if (@Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-outline-primary">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-outline-primary">Create</button>
                    }
                </div>
                <div class="p-3">
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        К списку записей
                    </a>
                </div>
                @if (@Model.Id != 0)
                {
                    <div class="p-3">
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger" style="padding-block-end">
                            Удалить
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}