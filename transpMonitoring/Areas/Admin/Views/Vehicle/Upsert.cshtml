@model VehicleVM
@{
    ViewData["Title"] = "Транспорт";
}<div class="d-flex  justify-content-center">
    <h2 class="text-primary ">@(Model.Vehicle.Id != 0 ? "Изменить" : "Создать") транспорт</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Vehicle.Id" hidden/>
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3">
                <label asp-for="Vehicle.UserId" class="p-0"></label>
                <select asp-for="Vehicle.UserId" class="form-select" asp-items="@Model.UserList">
                    <option disabled selected>--Выберите ответственного--</option>#
                </select>
                <span asp-validation-for="Vehicle.UserId" class="text-danger"></span>
            </div>
            <div class="p-3">
                <label asp-for="Vehicle.Brand" class="p-0"></label>
                <input asp-for="Vehicle.Brand" class="form-control" />
                <span asp-validation-for="Vehicle.Brand" class="text-danger"></span>
            </div>
            <div class="p-3">
                <label asp-for="Vehicle.Model" class="p-0"></label>
                <input asp-for="Vehicle.Model" class="form-control" />
                <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
            </div>
            <div class="p-3">
                <label asp-for="Vehicle.StateRegisterNumber" class="p-0"></label>
                <input asp-for="Vehicle.StateRegisterNumber" class="form-control" />
                <span asp-validation-for="Vehicle.StateRegisterNumber" class="text-danger"></span>
            </div>
            @* <div class="p-3">
                <button type="submit" class="btn btn-outline-primary" asp-controller="Driver" asp-action="Upsert" asp-route-id="Driver.Id" asp-route-VehicleId="Vehicle.Id" class="text-primary" style="padding-block-end">
                    <a asp-controller="Driver" asp-action="Upsert" asp-route-id="Driver.Id" asp-route-VehicleId="Vehicle.Id" class="text-primary" style="padding-block-end">
                        Перейти на страницу создания водителя
                    </a>
                </button>
            </div> *@
            <div class="d-flex flex-lg-row justify-content-start">
                <div class="p-3">

                    @if (@Model.Vehicle.Id != 0)
                    {
                        <button type="submit" class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> Обновить</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-outline-primary"> <i class="bi bi-plus-circle"></i> Создать</button>
                    }

                </div>
                <div class="p-3">
                    <a asp-controller="Vehicle" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        <i class="bi bi-box-arrow-in-left"></i> Назад
                    </a>
                </div>
                @if (@Model.Vehicle.Id != 0)
                {
                    <div class="p-3">
                        <a asp-controller="Vehicle" asp-action="Delete" class="btn btn-outline-danger" style="padding-block-end">
                            <i class="bi bi-trash3"></i> Удалить
                        </a>
                    </div>
                }
            </div>
            
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}