@model VehicleVM
@{
    ViewData["Title"] = "Транспорт";
}<div class="d-flex  justify-content-center">
    <h2 class="text-primary ">@(Model.Vehicle.Id != 0 ? "Изменить" : "Создать") транспорт</h2>
    <hr />
