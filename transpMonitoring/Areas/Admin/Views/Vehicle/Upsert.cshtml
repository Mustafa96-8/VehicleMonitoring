<form method="post">
    <input asp-for="Vehicle.Id" hidden/>
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3">
                <label asp-for="Vehicle.UserId" class="p-0"></label>
                <select asp-for="Vehicle.UserId" class="form-select" asp-items="@Model.UserList">
                    <option disabled selected>--Выберите ответственного--</option>#
                </select>
                <span asp-validation-for="Vehicle.UserId" class="text-danger"></span>
            </div>
            <div class="p-3">
                <label asp-for="Vehicle.Brand" class="p-0"></label>
                <input asp-for="Vehicle.Brand" class="form-control" />
                <span asp-validation-for="Vehicle.Brand" class="text-danger"></span>
            </div>
            <div class="p-3">
                <label asp-for="Vehicle.Model" class="p-0"></label>
                <input asp-for="Vehicle.Model" class="form-control" />
                <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
            </div>
            <div class="p-3">
                <label asp-for="Vehicle.StateRegisterNumber" class="p-0"></label>
                <input asp-for="Vehicle.StateRegisterNumber" class="form-control" />
                <span asp-validation-for="Vehicle.StateRegisterNumber" class="text-danger"></span>
            </div>
            <div class="p-3">
                <button type="submit" class="btn btn-outline-primary">
                    <a asp-controller="Driver" asp-action="Upsert" asp-route-id="Driver.Id" asp-route-VehicleId="Vehicle.Id" style="padding-block-end">
                        Перейти на страницу создания водителя
                    </a>
                </button>

