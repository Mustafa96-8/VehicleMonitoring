@model Vehicle
@{

    ViewData["Title"] = "Удалить транспорт";
}
<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Удалить транспорт</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-0">
                <label asp-for="Id" class="p0" for="id"></label>
                <label class="form-control" id="id">@Model.Id </label>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="StateRegisterNumber" class="p0" for="StateRegisterNumber"></label>
                <label class="form-control" id="StateRegisterNumber">@Model.StateRegisterNumber </label>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="Model" class="p0" for="Model"></label>
                <label class="form-control" id="Model">@Model.Model </label>
            </div>
            @if (Model.Brand != null)
            {
                <div class="p-3 pb-0">
                    <label asp-for="Brand" class="p0" for="Brand"></label>
                    <label class="form-control" id="Brand">@Model.Brand </label>
                </div>
            }
            <div class="d-flex flex-column p-3 pb-1">
                @foreach (var description in Model.Descriptions)
                {
                    <div class="p-2 pb-1">
                        <label class="p0" for="description">@description.Name :</label>
                        <label class="form-control" id="descriprion">@description.Content</label>
                    </div>
                }
            </div>
            <div class=" d-flex justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="Vehicle" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2" style="padding-block-end">
                        <i class="bi bi-box-arrow-in-left"></i> К списку ТС
                    </a>
                </div>
                <div class="p-3">
                    <button type="submit" class="btn btn-danger mx-1 rounded-2" style="padding-block-end">
                        <i class="bi bi-trash3"></i> Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
