@model SensorType
@{
    ViewData["Title"] = "Тип датчиков";
}<div class="d-flex  justify-content-center">
    <h2 class="text-primary ">@(Model.Id != 0 ? "Изменить" : "Создать") транспорт</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex flex-lg-row justify-content-start">
                <div class="p-3">

                    @if (@Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-outline-primary">Изменить</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-outline-primary">Создать</button>
                    }

                </div>
                <div class="p-3">
                    <a asp-controller="SensorType" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        К списку типов датчиков 
                    </a>
                </div>
                @if (@Model.Id != 0)
                {
                    <div class="p-3">
                        <a asp-controller="SensorType" asp-action="Delete" class="btn btn-outline-danger" style="padding-block-end">
                            Удалить
                        </a>
                    </div>
                }
            </div>

        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}