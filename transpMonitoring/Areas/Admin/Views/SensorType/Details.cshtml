@model SensorType
@{

    ViewData["Title"] = "Тип Датчиков";
}

<form method="get">
    <div class="container border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Html.DisplayName(Model.Name)</h2>
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Name" class="p-0"></label> : @Html.DisplayName(Model.Name)
            </p>
        </div>
        <div class="row">
            <div class="w-75 btn-group" role="group">
                <a asp-controller="SensorType" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-box-arrow-in-left"></i> К списку типов датчиков
                </a>
            </div>
        </div>
    </div>
</form>
