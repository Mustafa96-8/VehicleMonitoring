@model Sensor
@{

    ViewData["Title"] = "Датчик";
}
<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Удалить датчик</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-1">
                <label asp-for="Name" class="p-0"></label>:<p>@Model.Name</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="SensorTypeId" class="p-0"></label>:<p>@Model.SensorTypeId</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="SensorType.Name" class="p-0"></label>:<p>@Model.SensorType.Name</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Vehicle.StateRegisterNumber" class="p-0"></label>:<p>@Model.Vehicle.StateRegisterNumber</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Vehicle.Model" class="p-0"></label>:<p>@Model.Vehicle.Model</p>
            </div>
            <div class="p-3 pb-1">
                <label asp-for="Vehicle.Brand" class="p-0"></label>:<p>@Model.Vehicle.Brand</p>
            </div>
            
            <div class=" d-flex justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="Sensor" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                        К списку сообщений
                    </a>
                </div>
                <div class="p-3">
                    <button type="submit" class="btn btn-outline-danger" style="padding-block-end">
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
