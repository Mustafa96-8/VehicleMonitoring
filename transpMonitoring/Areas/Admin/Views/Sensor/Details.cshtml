@model Sensor
@{

    ViewData["Title"] = "Датчик";
}
<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Датчик</h2>
    <hr />
</div>
<form method="get">
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">

            <div class="p-3 pb-0">
                <label asp-for="Name" class="p-0"></label>:<p>@Model.Name</p>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="Vehicle.StateRegisterNumber" class="p-0"></label>:<p>@Model.Vehicle.StateRegisterNumber</p>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="Vehicle.Model" class="p-0"></label>:<p>@Model.Vehicle.Model</p>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="ParametrUpper" class="p-0"></label>:<p>@Model.ParametrUpper</p>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="ParametrLower" class="p-0"></label>:<p>@Model.ParametrLower</p>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="SensorType.Name" class="p-0"></label>:<p>@Model.SensorType.Name</p>
            </div>
            <div class=" d-flex flex-lg-row justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="Sensor" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2">
                        <i class="bi bi-box-arrow-in-left"></i> К списку датчиков
                    </a>
                </div>
                <div class="p-3">
                    <a asp-controller="Sensor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1 rounded-2">
                        <i class="bi bi-pencil-square"></i> Изменить
                    </a>
                </div>
                <div class="p-3">
                    <a asp-controller="Sensor" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mx-1 rounded-2">
                        <i class="bi bi-trash3"></i> Удалить
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>