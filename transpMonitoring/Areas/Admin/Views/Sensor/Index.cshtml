@model List<Sensor>
@{

    ViewData["Title"] = "Список датчиков";
}
<div class="container">
    <div class="container d-flex justify-content-end">
        <a asp-controller="Sensor" asp-action="Upsert" type="button" class="btn btn-outline-primary btn">
            <i class="bi bi-plus-circle"></i> Добавить датчик
        </a>
    </div>
    <table class="table table-light table-striped table-hover m-3 ">

        <thead class="tab-content">
            <tr>
                <th>
                    Имя
                </th>
                <th>
                    Id транспорта
                </th>
                <th>
                    Id типа датчика
                </th>
                <th>
                    Верхний параметр
                </th>
                <th>
                    Нижний параметр
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td class="tab-content ">
                        <a class="" asp-controller="Sensor" asp-action="Details" asp-route-id="@obj.Id">@obj.Name</a>
                    </td>
                    <td class="tab-content">
                        @obj.VehicleId
                    </td>
                    <td class="tab-content">
                        @obj.SensorTypeId
                    </td>
                    <td class="tab-content">
                        @obj.ParametrUpper
                    </td>
                    <td class="tab-content">
                        @obj.ParametrLower
                    </td>

                    <td class="tab-content ">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Sensor" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary mx-1 rounded-2">
                                <i class="bi bi-pencil-square"></i> Подробнее
                            </a>
                            <a asp-controller="Sensor" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-1 rounded-2">
                                <i class="bi bi-pencil-square"></i> Изменить
                            </a>
                            <a asp-controller="Sensor" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1 rounded-2">
                                <i class="bi bi-trash3"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
