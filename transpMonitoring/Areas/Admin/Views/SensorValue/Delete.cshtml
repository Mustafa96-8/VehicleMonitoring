@model SensorValue
@{

    ViewData["Title"] = "Удалить транспорт";
}
<div class="d-flex justify-content-center">
    <h2 class="text-primary ">Удалить транспорт</h2>
    <hr />
</div>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <div class="border d-flex flex-column w-50">
            <div class="p-3 pb-0">
                <label asp-for="Id" class="p0" for="id"></label>
                <label class="form-control" id="id">@Model.Id </label>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="Value" class="p0" for="Value"></label>
                <label class="form-control" id="Value">@Model.Value </label>
            </div>
            <div class="p-3 pb-0">
                <label asp-for="CreationTime" class="p0" for="CreationTime"></label>
                <label class="form-control" id="CreationTime">@Model.CreationTime </label>
            </div>
            @if (Model.Sensor != null)
            {
                <div class="p-3 pb-0">
                    <label asp-for="Sensor.Name" class="p0" for="Sensor.Name"></label>
                    <label class="form-control" id="Sensor.Name">@Model.Sensor.Name </label>
                </div>
            }
            <div class=" d-flex justify-content-end  ">
                <div class="p-3">
                    <a asp-controller="SensorValue" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2" style="padding-block-end">
                        К списку показаний
                    </a>
                </div>
                <div class="p-3">
                    <button type="submit" class="btn btn-danger mx-1 rounded-2" style="padding-block-end">
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
